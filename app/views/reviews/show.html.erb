<div id="postArea">
<h1 style="color:blue;"><%= @review.title %></h1>
	<p style="height:100px; overflow:auto; width:400px; padding: 10px 10px; box-shadow: 5px 5px 20px #888888;"><%= @review.body %></p>
	<%= @review.score %> user found this review helpful
	<p style="font-size:10px; color: red;"> Posted <%=time_ago_in_words (@review.created_at) %> ago  by <%= @review.user.username %><br />
		<% if current_user %>
		<%= render "/comments/comment" %>
		<% else %>
 	<h3 style="color:#FF0000;">You must be logged in to comment on reviews! <br><%= link_to "Sign up! now to receive 15% off of your first order", new_user_path %></h3>
 	<% end %>


		<div id="commentsTotal">
		<% @review.comments.order(created_at: :desc).each do |comment| %>

		<p> <%= comment.body %></p>
		<p style="font-size:10px; color: red;"> Posted <%=time_ago_in_words (comment.created_at) %> ago  by <%= comment.user.username %></p>
		<% end %>
		</div>
	</div>
